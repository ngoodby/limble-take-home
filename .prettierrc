{
	"useTabs": true,
	"singleQuote": true,
	"printWidth": 100,
	"plugins": ["@ianvs/prettier-plugin-sort-imports"],
	"importOrder": [
		"<BUILTIN_MODULES>",
		"^(@sveltejs/(.*)|svelte)$",
		"^@skeletonlabs(/.*)$",
		"^(@arcgis|@esri)(/.*)$",
		"<THIRD_PARTY_MODULES>",
		"",
		"^\\$lib(/.*)$",
		"",
		"^(\\$app|\\$env)(/.*)$",
		"",
		"^[.]",
		"",
		"<TYPES>",
		"<TYPES>^\\$lib(/.*)$",
		"",
		".css$"
	],
	"importOrderTypeScriptVersion": "5.0.0",
	"overrides": [
		{
			"files": ["*.md", "*.toml", "*.yml"],
			"options": {
				"useTabs": false
			}
		}
	]
}
